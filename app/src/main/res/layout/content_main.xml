<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            >


            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="Survey Form"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Area/Sector"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter Area Name"
                android:inputType="textCapSentences"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/area"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Type of street food (Food street, market, stall, kiosk, other)"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/area"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/f_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter Type Of Food"
                android:inputType="textCapSentences"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f_type"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Name of Surveyor"
                android:textSize="12dp"
                android:textStyle="bold" />



            <TextView
                android:layout_toRightOf="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/f_type"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:clickable="false"
                android:contextClickable="false"
                android:hint="Enter Name Of Surveyor"
                android:inputType="textCapSentences"
                android:minHeight="40dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/t44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Date:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t44"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter Date"
                android:inputType="phone"
                android:minHeight="40dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Name of the shop"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="10dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t6"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter Shop Name"
                android:inputType="textCapSentences"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/t66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Name of the shop owner"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/t66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/shop_ow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t66"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter Shop Owner Name"
                android:inputType="textCapSentences"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_ow"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="CNIC #"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter CNIC (optional)"
                android:inputType="phone"
                android:maxLength="13"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/t55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nic"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Mobile #"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/t55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nic"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t55"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:maxLength="11"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/t555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Type of food sold: Mark the following option(s)"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/t555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/num"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t555"
                android:layout_margin="5dp"
                android:text="Beverages (Juices, soft drinks, shakes)"
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c1"
                android:layout_margin="5dp"
                android:text="Desserts (Ice cream, Kheer)"
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c2"
                android:layout_margin="5dp"
                android:text="Snack food (samosa, pakora, dehibhalla, chaat, paanipuri, French fries, Goal Gappay) "
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c3"
                android:layout_margin="5dp"
                android:text="Meat items (chicken tikka, seekh kebab, taka tuk, kaleeji, Gurdey)"
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c4"
                android:layout_margin="5dp"
                android:text="Desi/Traditional food (Payee, Nehari, Halwa puri, Haleem, Sag) "
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c5"
                android:layout_margin="5dp"
                android:text="Fast food (burger, pizza, tacos, nuggets, snacks)"
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c6"
                android:layout_margin="5dp"
                android:text="Chinese food (Soup, pasta, noodles)"
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c7"
                android:layout_margin="5dp"
                android:text="Sea food (Fish, prawn)"
                android:textSize="12dp" />


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/c9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c8"
                android:layout_margin="5dp"
                android:text="Others"
                android:textSize="12dp" />


            <EditText
                android:background="@drawable/dotted_background"
                android:id="@+id/et_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/c8"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/c9"
                android:minHeight="40dp"
                android:hint="Enter Other Type"
                android:textColor="#2e2e2e"
                android:singleLine="true"
                android:textAlignment="center"
                android:visibility="gone" />


            <TextView
                android:id="@+id/bc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c9"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Number of workers"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_toRightOf="@+id/bc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c9"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:text="*"
                android:textColor="#f50d0d"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/no_workers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bc"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dotted_background"
                android:hint="Number Of Workers"
                android:inputType="number"
                android:maxLines="1"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e" />


            <TextView
                android:id="@+id/bc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_workers"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="textCapSentences"
                android:text="Remarks"
                android:textSize="12dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bc1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/dotted_background"
                android:gravity="start"
                android:hint="Enter your remarks here (optional)"
                android:minHeight="95dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#2e2e2e"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/remarks"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Image"
                android:textSize="12dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imagview"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/img"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:maxHeight="400dp"
                android:scaleType="centerInside"
                android:src="@drawable/no_image" />


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagview"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="#fff" />







        </RelativeLayout>

    </ScrollView>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        />



</android.support.design.widget.CoordinatorLayout>